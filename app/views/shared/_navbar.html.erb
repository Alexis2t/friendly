<div class="navbar navbar-expand-sm navbar-light navbar-lewagon">
  <div class="container-fluid">
    <%= link_to(image_tag("logo.png", class:"logo", crop:'fill'), friends_path) %>

    <div class="collapse navbar-collapse" id="navbarSupportedContent">
      <ul class="navbar-nav me-auto">
        <li class="nav-item">
          <%= link_to "Friends", friends_path, class:"nav-link" %>
        </li>
        <% if user_signed_in? %>
          <li class="nav-item">
            <%= link_to "Dashboard", dashboard_path(current_user), class:"nav-link" %>
          </li>
        <% end %>

        <li class="nav-item dropdown">
          <% if user_signed_in? %>
            <% if current_user.photo.attached? %>
              <%= cl_image_tag(current_user.photo.key, class:"avatar dropdown-toggle", crop:'fill', data: { bs_toggle:"dropdown" }) %>
            <% else %>
              <img class="avatar dropdown-toggle" id="navbarDropdown" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false" src="https://cdn-icons-png.flaticon.com/512/6596/6596121.png" />
            <% end %>
            <div class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                <%= link_to "Log out", destroy_user_session_path, data: { turbo_method:"delete" }, class:"dropdown-item" %>
            </div>
          <% else %>
            <li class="nav-item">
              <%= link_to "Se connecter", new_user_session_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to "S'inscrire", new_user_registration_path, class:"nav-link" %>
            </li>
          <% end %>
        </li>
      </ul>
    </div>
  </div>
</div>
